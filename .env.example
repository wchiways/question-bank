# 应用配置
APP_NAME="OCS题库系统"
APP_VERSION="2.0.0"
DEBUG=true
API_V1_PREFIX="/api/v1"

# 服务器配置
HOST="0.0.0.0"
PORT=8000

# 数据库配置
DATABASE_URL="sqlite+aiosqlite:///./question_bank.db"
DATABASE_ECHO=false

# AI服务配置
AI_PROVIDER="siliconflow"
AI_MODEL="Qwen/QwQ-32B"
AI_API_KEY="your_api_key_here"
AI_API_URL="https://api.siliconflow.cn/v1/chat/completions"
AI_TIMEOUT=30
AI_MAX_RETRIES=3

# 缓存配置
CACHE_TYPE="memory"
CACHE_TTL=3600
# REDIS_URL="redis://localhost:6379/0"

# 限流配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# 日志配置
LOG_LEVEL="INFO"
LOG_FILE="logs/app.log"
LOG_ROTATION="10 MB"

# 安全配置
SECRET_KEY="change-this-in-production-use-random-string"
ALLOWED_HOSTS=["*"]
